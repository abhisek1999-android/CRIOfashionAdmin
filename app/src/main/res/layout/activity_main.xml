<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

                android:layout_below="@+id/packageWeight"
               android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:background="@drawable/button_background_new"
                android:text="submit"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed" />
  <!--  <EditText
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"

        android:hint="Enter Price"
        android:padding="8dp"

        android:textSize="18sp" />-->
            <EditText
                android:id="@+id/shortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/companyName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:hint="Short Description"
                android:lines="1"
                android:padding="15dp"/>

            <EditText
        android:id="@+id/productDescription"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/shortDescription"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:hint="Product Description"
        android:inputType="text|textMultiLine"
        android:lines="4"
        android:padding="8dp"/>
            <EditText
                android:id="@+id/productFeature"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/productDescription"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:hint="Product Features"
                android:inputType="text|textMultiLine"
                android:lines="8"
                android:padding="8dp"/>


            <EditText
        android:id="@+id/productOverview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/productFeature"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Product Overview"
        android:inputType="text|textMultiLine"
        android:lines="2"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        />
            <EditText
                android:id="@+id/productMaterial"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/productOverview"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Product Matearial"
                android:inputType="text|textMultiLine"
                android:lines="1"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/materialWight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productMaterial"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="Material Weight"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:layout_marginRight="30dp"/>
            <EditText
                android:id="@+id/careInstruction"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/materialWight"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Care Instruction"
                android:inputType="text|textMultiLine"
                android:lines="2"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                />

    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:hint="Product Name"
        android:padding="15dp"
        android:layout_below="@+id/productId"
        />

    <EditText
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="Company Name"
        android:padding="15dp"
        android:gravity="top"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Insert Product"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

  <!--  <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fontImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@id/productDescription"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_baseline_account_box_24" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fontImage"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-40dp"
        android:text="Front Image"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="italic" />


    <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/backImage"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:layout_below="@id/productDescription"
    android:layout_marginLeft="150dp"
    android:layout_marginTop="200dp"
    android:src="@drawable/ic_baseline_account_box_24" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fontImage"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-40dp"
        android:gravity="left"
        android:text="Back Image"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="italic" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/orginalImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@id/productDescription"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_baseline_account_box_24" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fontImage"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="-40dp"
        android:gravity="left"
        android:text="Orginal Image"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="italic" />-->

    <EditText
        android:id="@+id/productType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/careInstruction"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:hint="Category"
       >
    </EditText>
    <Spinner
        android:id="@+id/productFor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productType"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:entries="@array/For"
        />

            <!--First wrap edit text with com.google.android.material.textfield.TextInputLayout,
            place id and below id etc to this layout and then make EditText to
             com.google.android.material.textfield.TextInputEditText

            -->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productId"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/textView2"
                app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Id"
                android:padding="15dp"
                android:inputType="text"
                android:digits="0123456789*,qwertzuiopasdfghjklyxcvbnm,QWERTZUIOPASDFGHJKLYXCVBNM"
                />
        </com.google.android.material.textfield.TextInputLayout>
            <EditText
                android:id="@+id/packageWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:hint="Package Width"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:layout_below="@+id/productFor"
                />

            <EditText
                android:id="@+id/packageHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Package Height"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_below="@+id/packageWidth"
                />
            <EditText
                android:id="@+id/packageWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="Package Weight"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:layout_below="@+id/packageDepth"
                />
            <EditText
                android:id="@+id/packageDepth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="Package Depth"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:layout_below="@+id/packageHeight"
                />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>