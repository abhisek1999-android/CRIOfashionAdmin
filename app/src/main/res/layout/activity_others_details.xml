<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".others_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview9"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/futurapt_font"
                android:layout_marginLeft="15dp"
                android:text="Product Details"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/copyId"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="Product Id : AB000CD"
                android:fontFamily="@font/futurapt_font"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textview9"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Product's Colour Name*:"
                android:fontFamily="@font/futurapt_font"
                android:layout_below="@+id/copyId"
                android:id="@+id/textView0"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/colorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_below="@id/textView0"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/colorName"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Product Size Description*: "
                android:fontFamily="@font/futurapt_font"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/sizeDescription"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@id/textView1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:padding="15dp"

                android:lines="4"/>



            <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/sizeDescription"
            android:layout_marginLeft="15dp"
            android:text="Base Material*: "
                android:fontFamily="@font/futurapt_font"
            android:textSize="20dp"/>



            <EditText
                android:id="@+id/productFilling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_marginLeft="10dp"

                android:padding="15dp"
                android:layout_marginRight="30dp"/>



            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/productFilling"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Package Includes: "
                android:fontFamily="@font/futurapt_font"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/packageIncludes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_marginLeft="10dp"

                android:padding="15dp"
                android:layout_marginRight="30dp"/>
            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/packageIncludes"
                android:layout_marginLeft="15dp"
                android:text="Warranty Description: "
                android:fontFamily="@font/futurapt_font"
                android:textSize="20dp"
                android:layout_marginTop="5dp"/>



            <EditText
                android:id="@+id/productWarranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView22"
                android:layout_marginLeft="10dp"

                android:padding="15dp"
                android:layout_marginRight="30dp"/>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/productWarranty"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Product Size(Eg 4cm * 6cm)*: "
                android:fontFamily="@font/futurapt_font"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/productSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:layout_marginLeft="10dp"
                android:hint="Product Size(Eg 4ft * 6ft)"
                android:fontFamily="@font/futurapt_font"
                android:padding="16dp"
                android:digits="0123456789*,qwertzuiopasdfghjklyxcvbnm,QWERTZUIOPASDFGHJKLYXCVBNM"
                android:layout_marginRight="30dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mfdMrpLayout"
    android:layout_below="@id/productSize">
            <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/productMrp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/productSize"
                android:layout_marginLeft="10dp"
                android:hint="MRP"
                android:textAlignment="center"
                android:fontFamily="@font/futurapt_font"
                android:background="@drawable/button_background"
                android:padding="15dp"
                android:digits="0123456789"
                android:layout_marginRight="30dp"/>



            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/productMfd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productSize"
                android:layout_marginLeft="10dp"
                android:text="Product MFD"
                android:layout_toEndOf="@id/productMrp"
                android:fontFamily="@font/futurapt_font"
                android:background="@drawable/button_background"
                android:padding="15dp"
                android:inputType="date"
                android:layout_marginRight="30dp"/>

</LinearLayout>




            <EditText
                android:id="@+id/productPriceMax"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/mfdMrpLayout"
                android:layout_marginLeft="15dp"
                android:hint="Price"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:background="@drawable/button_background"
                android:fontFamily="@font/futurapt_font"
                android:padding="15dp"
                android:inputType="numberDecimal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"/>

            <EditText
                android:id="@+id/productPriceMin"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_below="@id/mfdMrpLayout"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/productPriceMax"
                android:background="@drawable/button_background"
                android:hint="Customer\nPrice"
                android:fontFamily="@font/futurapt_font"
                android:padding="15dp"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="13dp"/>

            <EditText
                android:id="@+id/numberOfPieces"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_below="@id/mfdMrpLayout"
                android:layout_alignParentRight="true"
                android:hint="Pieces"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_background"
                android:layout_marginTop="20dp"
                android:inputType="numberDecimal"
                android:fontFamily="@font/futurapt_font"
                android:padding="15dp"
                android:layout_marginRight="30dp"/>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productPriceMax"
                android:id="@+id/imagesLayout"
                >

            <ImageView
                  android:id="@+id/Image1"
                  android:layout_width="100dp"
                  android:layout_height="150dp"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                  android:src="@drawable/ic_baseline_account_box_24" />

              <TextView
                  android:id="@+id/text1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/Image1"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="30dp"
                  android:layout_marginTop="-40dp"
                  android:text="Image1*"
                  android:textSize="20sp"
                  android:fontFamily="@font/futurapt_font"
                  android:textStyle="bold" />


              <ImageView
                  android:id="@+id/Image2"
                  android:layout_width="100dp"
                  android:layout_height="150dp"
                  android:layout_centerHorizontal="true"
                  android:layout_marginLeft="150dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/ic_baseline_account_box_24" />

              <TextView
                  android:id="@+id/text2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/Image2"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="-40dp"
                  android:gravity="center"
                  android:text="Image2"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:fontFamily="@font/futurapt_font"/>

              <ImageView
                  android:id="@+id/Image3"
                  android:layout_width="100dp"
                  android:layout_height="150dp"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/ic_baseline_account_box_24" />
              <TextView
                  android:id="@+id/textView5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/Image3"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="-40dp"
                  android:layout_marginRight="40dp"
                  android:gravity="left"
                  android:text="Image3"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:fontFamily="@font/futurapt_font"/>
              <ImageView
                  android:id="@+id/Image4"
                  android:layout_width="100dp"
                  android:layout_height="150dp"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:layout_below="@+id/Image1"
                  android:src="@drawable/ic_baseline_account_box_24" />
              <TextView
                  android:id="@+id/textView6"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/Image4"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="40dp"
                  android:layout_marginTop="-40dp"
                  android:text="Image4"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:fontFamily="@font/futurapt_font"/>


              <ImageView
                  android:id="@+id/Image5"
                  android:layout_width="100dp"
                  android:layout_height="150dp"
                  android:layout_centerHorizontal="true"
                  android:layout_marginLeft="150dp"
                  android:layout_below="@+id/Image2"
                  android:src="@drawable/ic_baseline_account_box_24" />
              <TextView
                  android:id="@+id/textView7"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/Image5"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="-40dp"
                  android:gravity="center"
                  android:text="Image5"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:fontFamily="@font/futurapt_font"/>

            <ImageView
                android:id="@+id/Image6"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/Image3"
                android:layout_marginRight="27dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_baseline_account_box_24" />

            <TextView
                  android:id="@+id/textView8"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/Image6"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="-40dp"
                  android:layout_marginRight="40dp"
                  android:gravity="left"
                  android:text="Image6"
                  android:textSize="20sp"
                  android:textStyle="bold"
                android:fontFamily="@font/futurapt_font"/>
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Image6"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="5dp"
                android:text="( You Can Chose An Image Filed As  \n Size Chart )"
                android:fontFamily="@font/futurapt_font"
                android:textSize="15dp" />

            </RelativeLayout>

              <Button
                  android:id="@+id/submitButton1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/imagesLayout"
                  android:layout_marginBottom="10dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"

                  android:layout_marginTop="20dp"
                  android:background="@drawable/button_background_new"
                  android:text="submit"
                  android:textColor="@color/common_google_signin_btn_text_dark_pressed" />


            <Button
                android:id="@+id/updateDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagesLayout"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background_new"
                android:text="Update"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>